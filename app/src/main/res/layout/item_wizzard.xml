<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:id="@+id/item_user_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingStart="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_user_image_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:layout_toEndOf="@id/item_user_image_view"
            android:orientation="vertical"
            android:layout_toRightOf="@id/item_user_image_view">

            <TextView
                android:id="@+id/item_display_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                tools:text="poznas"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_team_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                tools:text="sensum"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@mipmap/fb_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="16dp"/>

    </RelativeLayout>

</LinearLayout>