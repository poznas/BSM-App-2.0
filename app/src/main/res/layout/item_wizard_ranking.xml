<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp">

    <TextView
        android:textSize="20sp"
        android:id="@+id/ranking_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_user_image_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_toRightOf="@id/ranking_number"
        android:layout_toEndOf="@id/ranking_number"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/item_user_image_view"
        android:layout_toEndOf="@id/item_user_image_view"
        android:layout_centerVertical="true"
        android:id="@+id/item_display_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_points_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="24sp"
        android:textStyle="bold"/>

</RelativeLayout>