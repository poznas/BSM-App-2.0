<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:id="@+id/item_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/item_time_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="22:07"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_date_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:text="25 wrzesnia"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_user_image_view"
                android:layout_width="36dp"
                android:layout_height="36dp"
                tools:src="@mipmap/sensum"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/item_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:paddingLeft="8dp"
                tools:text="Lipski" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_label_text_view"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="@color/purple"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="MC"/>

        <TextView
            android:id="@+id/item_points_text_view"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            tools:textColor="@color/red"
            android:paddingRight="8dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="-999"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow_icon"
            android:paddingRight="16dp"/>

    </LinearLayout>

</LinearLayout>