<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_user_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    android:paddingRight="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_user_image_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/sensum" />

    <LinearLayout
        android:id="@+id/name_parent_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/item_user_image_view"
        android:orientation="vertical"
        android:layout_toRightOf="@id/item_user_image_view"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/item_display_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            tools:text="poznas"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_team_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            tools:text="sensum"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/label_text_view"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@id/name_parent_view"
        android:layout_alignRight="@id/name_parent_view"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:id="@+id/at_icon"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_at" />

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:id="@+id/male_icon"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_male" />

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:id="@+id/female_icon"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_female" />

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:id="@+id/fb_icon"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:src="@mipmap/fb_icon" />

    </LinearLayout>


</RelativeLayout>
